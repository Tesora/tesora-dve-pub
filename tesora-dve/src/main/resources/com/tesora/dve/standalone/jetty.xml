<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure id="Server" class="org.eclipse.jetty.server.Server">

	<Call name="addConnector">
		<Arg>
			<New class="org.eclipse.jetty.server.nio.SelectChannelConnector">
				<Set name="port">8080</Set>
			</New>
		</Arg>
	</Call>

	<Set name="handler">
		<New id="Handlers" class="org.eclipse.jetty.server.handler.HandlerCollection">
			<Set name="handlers">
				<Array type="org.eclipse.jetty.server.Handler">
					<Item>
						<New id="management" class="org.eclipse.jetty.webapp.WebAppContext">
							<Set name="displayName">DVEManagement</Set>
							 <Set name="war"><SystemProperty name="tesora.dve.install"/>/ui/war/DVEManagement.war</Set>
							<Set name="contextPath">/DVEManagement</Set>
							<Set name="parentLoaderPriority">true</Set>
						</New>
					</Item>
					<Item>
						<New id="rest" class="org.eclipse.jetty.webapp.WebAppContext">
							<Set name="displayName">DVERest</Set>
							<Set name="war"><SystemProperty name="tesora.dve.install"/>/ui/war/DVERest.war</Set>
							<Set name="contextPath">/DVERest</Set>
							<Set name="parentLoaderPriority">true</Set>
						</New>
					</Item>
					<!-- 
					<Item>
						<New id="demo" class="org.eclipse.jetty.webapp.WebAppContext">
							<Set name="displayName">DVEDemo</Set>
							<Set name="war"><SystemProperty name="tesora.dve.install"/>/demo/war/DVEDemo.war</Set>
							<Set name="contextPath">/DVEDemo</Set>
							<Set name="parentLoaderPriority">true</Set>
						</New>
					</Item>
					<Item>
						<New id="ingest" class="org.eclipse.jetty.webapp.WebAppContext">
							<Set name="displayName">DVEIngestDemo</Set>
							<Set name="war"><SystemProperty name="tesora.dve.install"/>/demo/war/DVEIngestDemo.war</Set>
							<Set name="contextPath">/DVEIngestDemo</Set>
							<Set name="parentLoaderPriority">true</Set>
						</New>
					</Item>
					 -->

					<Item>
						<New id="DefaultHandler" class="org.eclipse.jetty.server.handler.DefaultHandler" />
					</Item>
				</Array>
			</Set>
		</New>
	</Set>
</Configure>
